@model Room

<style>
   
    /* Style the room image */
    .room-image img {
        width: 400px;
        height: 100px;;
        object-fit: cover;
        border-radius: 5px 0 0 5px;
    }



    /* Style the room details */
    .room-details {
        padding: 20px;
    }



        .room-details h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }



    .price {
        font-size: 1.2rem;
        color: #f00;
    }



    .description {
        margin: 10px 0;
        font-size: 1rem;
        color: #555;
    }



    /* Style the amenities */
    .amenities {
        margin: 10px 0;
    }



        .amenities span {
            display: inline-block;
            margin-right: 10px;
            font-size: 0.9rem;
            color: #333;
        }



    /* Style the rating */
    .rating {
        display: flex;
        align-items: center;
        font-size: 1rem;
        color: #555;
    }



    .stars {
        color: #f0a800;
        margin-right: 5px;
    }



    .reviews {
        margin-left: 5px;
    }



    .container2 {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;
        margin-left: 50px;
    }



    .room-list {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }



    .room-card {
        display: flex;
        border: 1px solid #ccc;
        margin: 10px;
        border-radius: 5px;
        overflow: hidden;
        width: 800px;
    }



    .room-card {
        position: relative; /* Make the room-card a positioned container */
    }



    .btn-booking {
        position: absolute;
        bottom: 10px;
        right: 10px;
        margin-bottom: 10px;
        margin-right: 40px;
    }

</style>


