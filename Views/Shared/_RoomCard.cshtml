<div style="font-family: Calibri;" class="container2">
    <div class="room-list">
        <div style="margin-left: 90px;" class="container room-card">
            <div class="room-image">
                <!-- Increase the width of the image as needed -->
                <img src="@Model.ImageUrl" alt="Room Image" style="width: 300px; height: auto;margin-right:20px;">
                <!-- Add a booking button to the right corner -->
                @if (Model.NoOfRooms > 0)
                {
                    <a style="margin-top:30px;" class="btn btn-booking" asp-controller="Reservation" asp-action="Index" asp-route-roomId="@Model.RoomId"><b>BOOK NOW</b></a>
                }
                else
                {
                    <a class="btn btn-booking" disabled="disabled"><b>CURRENTLY UNAVAILABLE </b></a>
                }
            </div>
            <div class="room-details">
                <h2>@Model.RoomType</h2>
                <p class="price">₹ @Model.RoomPrice/day</p>
                <p class="description">A spacious and luxurious suite with stunning views.</p>
                <div class="amenities">
                    <span><i class="bi bi-wifi"></i> Free Wi-Fi</span>
                    <span><i class="bi bi-p-square"></i> Free Parking</span>
                    <span> Pool</span>
                    <span> Restaurant</span>
                    <span>Gym</span>
                    <span>Spa</span>
                    <span>Upto 4 Guests </span>
                </div>
            </div>
        </div>
    </div>
</div>
