@*-------------------------------------------------------------------logic for the video in the carousal ---------------------------------------------------------*@
<script>
    // JavaScript to pause and play videos when slides change
    var carousel = document.getElementById("carouselExampleCaptions");

    // Function to play the video in the active slide
    function playActiveVideo() {
        var activeSlide = carousel.querySelector(".carousel-item.active video");
        if (activeSlide) {
            activeSlide.play();
        }
    }

    // Add an event listener to play the video when the page loads
    window.addEventListener("load", function () {
        playActiveVideo();
    });

    // Add event listeners for slide changes
    carousel.addEventListener("slide.bs.carousel", function (event) {
        var videos = carousel.querySelectorAll("video");
        videos.forEach(function (video) {
            if (!video.paused) {
                video.pause();
            }
        });
    });

    carousel.addEventListener("slid.bs.carousel", function (event) {
        playActiveVideo();
    });
</script>


