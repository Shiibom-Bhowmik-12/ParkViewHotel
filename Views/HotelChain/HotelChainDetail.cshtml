@model HotelChainListViewModel

<style>
    #complogo {
        margin-left: 10em;
        width: 70px;
        height: 70px;
    }

    .navbar {
        height: 75px;
    }

    /* Style for navigation links */
    .nav-link {
        font-size: 1.0em;
        font-family: Calibri;
        font-weight: bold;
        margin-left: 0.7em;
        color: black; /* Default text color */
    }


        /* Hover effect on navigation links */
     .nav-link:hover {
            color: darkgrey
     }
</style>

@*--------------------------------------------------------------------------------navbar------------------------------------------------------------------------------*@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="complogo" src="~/images/logo.png" alt="company-logo" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Destination" asp-action="Index">DESTINATIONS</a>
                    </li>
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dining">DINING</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
</header>
<br/>
<br/>
<br/>
<br/>

@*----------------------------------------------------------------------------display hotels-------------------------------------------------------------------------------*@
<div class="container-fluid">
    <h1 style="text-align:center;font-family:Calibri" class="card-text"> Explore Hotels of @Model.HotelChain.Name </h1>
</div>

<div class="container">
    @*Display Hotels related to that HotelChain*@
    <div class="container-fluid mt-3">
        <div class="row">
            @foreach (var hotel in Model.Hotels)
            {
                <partial name="_HotelCard" model="hotel" />
            }
        </div>
    </div>
</div>



<h1 style="text-align:center;margin-top:38px;font-family:Calibri;">Tourist Destinations near Hotel Location </h1>
<div class="container">
    @*Display Destination related to that HotelChain*@
    <div class="container-fluid mt-3">
        @foreach (var dest in Model.Destinations)
        {
            <partial name="_DestinationCardWithoutButton" model="dest" />
        }
    </div>
</div>
<br/>

<div class="container">
    <a style="margin-left:12px;" asp-controller="HotelChain" asp-action="Index" class="btn">Back to Hotel Chains</a>
</div>






@*-------------------------------------------------------------footer------------------------------------------------------------------------------------------------*@
