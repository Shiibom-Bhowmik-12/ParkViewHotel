@model Parkview.Models.Destination


<style>
    #complogo {
        margin-left: 10em;
        width: 70px;
        height: 70px;
    }

    .navbar {
        height: 75px;
    }

    /* Style for navigation links */
    .nav-link {
        font-size: 1.0em;
        font-family: Calibri;
        font-weight: bold;
        margin-left: 0.7em;
        color: black; /* Default text color */
    }


        /* Hover effect on navigation links */
     .nav-link:hover {
            color:darkgrey
     }


    .short-hr {
        width: 50%; /* Adjust the width as needed (e.g., 50% for half the normal length) */
        margin: 0 auto; /* Center the shorter line horizontally if needed */
        background-color: #000; /* Optional: Set the color of the line */
    }


    .btn {
        background: rgb(198,100,7);
        background: linear-gradient(0deg, rgba(198,100,7,1) 25%, rgba(246,194,146,1) 98%);
        color: aliceblue;
    }

    #bookbtn {
        background: rgb(246,194,146);
        background: linear-gradient(0deg, rgba(246,194,146,1) 0%, rgba(198,100,7,1) 88%);
        color: white;
        transition: background-color 0.2s, transform 0.2s;
        font-weight: bold;
        font-family: Calibri;
    }

    #bookbtn:hover {
            background-color: rgba(214, 110, 12, 1);
            transform: scale(1.1);
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    .card:hover {
            transform: scale(1.02);
     }
    /* Apply shadow effect to the video container */
    .video-container {
        text-align:center;
    }


    .tv-container {
        width: 800px;
        margin: 0 auto;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
        position: relative; /* Required for positioning elements inside */
    }

    /* TV Frame */
    .tv-frame {
        background-color: #000; /* Black frame color */
        padding: 20px; /* Adjust padding as needed */
    }

    /* TV Stand */
    .tv-stand {
        background-color: #222; /* Dark stand color */
        height: 50px; /* Adjust height as needed */
    }

    /* Video */
    video {
        width: 100%;
        height: 450px;
        display: block;
    }

</style>




@*----------------------------------------------------------------------------------navbar-----------------------------------------------------------------------------------*@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="complogo" src="~/images/logo.png" alt="company-logo" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Destination" asp-action="Index">DESTINATIONS</a>
                    </li>
                    <li class="nav-item">
                        <a id="nav-text" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dining">DINING</a>
                    </li>
                </ul>
            </div>
            <div>
                <a id="bookbtn" style="margin-right:130px;" class="btn" type="button" asp-controller="HotelChain" asp-action="Index">BOOK A STAY</a>
            </div>
        </div>
    </nav>
</header>
<br/>
<br/>
<br/>


@*-------------------------------------------------------------------------Details of destination-------------------------------------------------------*@

<div class="container">
    <h1 style="text-align: center; margin-top: 20px; margin-bottom: 30px;font-family:Calibri">Some glimpses of @Model.DestinationState</h1>
    <div class="tv-container">
        <!-- TV Frame -->
        <div class="tv-frame">
            <video autoplay loop>
                <source src="@Model.DestinationVideoUrl" type="video/mp4">
            </video>
        </div>

        <!-- TV Stand -->
        <div class="tv-stand">
            <h5 style="font-family: Calibri; text-align: center; margin: 0;color:whitesmoke;">Parkview Theatre</h5>
        </div>
    </div>
    <p style="margin-top: 30px; text-align: justify;font-family:Calibri;font-size:large;">@Model.DestinationDetailedDescription</p>
    <br />
    <a class="btn" asp-controller="Destination" asp-action="Index">Go Back</a>
</div>

<br/>
<br/>
<br/>
<br/>





